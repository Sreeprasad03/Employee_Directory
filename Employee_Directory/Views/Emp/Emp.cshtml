@{
    Layout = null;
    ViewBag.Title = "Employee Directory";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <style>
        /* Basic reset and layout */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        .container {
            width: 90%;
            margin: 0 auto;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-top: 20px;
        }

        .card-header {
            background-color: #f8f9fa;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .card-body {
            padding: 20px;
        }

        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 600px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
            }

        /* Button styles */
        .btn {
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <section class="section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-header-text">Employee Directory</h2>
                        </div>
                        <div class="card-body">
                           

                            <div id="employeeModal" class="modal">
                                <div class="modal-content">
                                    <span class="close">&times;</span>
                                    <div class="header">
                                        <img src="~/Content/Img/testimonial-1.jpg" alt="Profile Picture" class="profile-pic">
                                        <div class="user-info">
                                            @*<h2>David Johnson</h2>
                                            <p>Software Engineer</p>
                                            <p>Rating: ⭐⭐⭐⭐ 4.5</p>
                                            <p>Address: 63B, Newyork Base Town, Texas</p>
                                            <p>Total Experience: 5 Years | In House Experience: 2 Years</p>
                                            <p>Team: <span class="team">Digital Marketing Trainee</span></p>
                                            <p>Reporting Manager: <span class="manager">Mikhael Edwards</span></p>*@
                                        </div>
                                    </div>
                                    <!-- Add the rest of your modal content here -->
                                </div>
                            </div>

                            <!-- Add the rest of your page content here -->
                        </div>

                        <div class="card-body">
                            <form id="search-form">
                                <div class="row g-3 align-items-end">
                                    <div class="col-md">
                                        <div class="input-field">
                                            <label for="search-input" class="form-label">Search</label>
                                            <input type="text" id="search-input" class="form-control" placeholder="Name / ID / Designation">
                                            <label for="location-filter" class="form-label">Location</label>
                                            <select id="location" class="form-select">
                                                @*<option value="all">All locations</option>*@
                                                <!-- Add options here -->
                                            </select>
                                            <label for="department" class="form-label">Department</label>
                                            <select id="department" class="form-select">
                                                <option value="all">All Departments</option>
                                                <!-- Add options here -->
                                            </select>
                                            <button type="submit" class="btn btn-search" id="btn_search">
                                                <i class="fas fa-search"></i> Search
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </form>

                            <div class="mt-4">
                                <fieldset id="Authorisation">
                                    <legend>Employee List</legend>
                                    <div id="EmpDetails" class="directory-grid">

                                        <!-- Employee cards will be dynamically inserted here -->
                                    </div>

                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
